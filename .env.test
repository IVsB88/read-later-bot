# Test Environment Configuration
ENVIRONMENT=testing

# Bot Configuration
TELEGRAM_TOKEN=test_bot_token_here
BOT_USERNAME=test_bot_username

# Database Configuration (Using SQLite for testing)
DATABASE_URL=sqlite:///test.db
DB_POOL_SIZE=1
DB_MAX_OVERFLOW=0

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings (Use fixed values for testing)
HASH_SALT=test_salt_do_not_use_in_production
ENCRYPTION_KEY=test_key_do_not_use_in_production

# Rate Limiting for Tests
RATE_LIMIT_MESSAGES=100  # Higher limits for testing
RATE_LIMIT_LINKS=50     # Higher limits for testing

# Testing-specific Settings
DEBUG=True
DEVELOPMENT_CHAT_ID=123456  # Your test chat ID