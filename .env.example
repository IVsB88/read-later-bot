# Application Environment
ENVIRONMENT=development  # Options: development, testing, production

# Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/db_name
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
HASH_SALT=your_random_salt_here  # Used for any hashing operations
ENCRYPTION_KEY=your_encryption_key  # Used for encrypting sensitive data

# Rate Limiting
RATE_LIMIT_MESSAGES=10  # Messages per minute
RATE_LIMIT_LINKS=5     # Links per minute

# Timeouts
DB_CONNECTION_TIMEOUT=10
API_TIMEOUT=30

# Production Only Settings (uncomment in production)
# SENTRY_DSN=your_sentry_dsn
# REDIS_URL=redis://localhost:6379/0

# Development Only Settings
DEBUG=True
DEVELOPMENT_CHAT_ID=your_telegram_chat_id  # For testing